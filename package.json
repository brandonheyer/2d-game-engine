{
  "name": "2d-engine",
  "version": "0.5.1",
  "description": "A game engine in two using D3 and writtin in ES6",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/brandonheyer/2d-engine.git"
  },
  "keywords": [
    "2d",
    "game",
    "engine",
    "es6",
    "babel",
    "d3",
    "visualization"
  ],
  "author": {
    "name": "Brandon Heyer",
    "email": "brandonheyer@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brandonheyer/2d-engine/issues"
  },
  "homepage": "https://github.com/brandonheyer/2d-engine#readme",
  "dependencies": {
    "d3": "^4.9.1",
    "jquery": "^3.3.1",
    "two.js": "^0.7.0-alpha.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-istanbul": "^0.12.2",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "babelify": "^8.0.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "eslint": "^4.12.1",
    "grunt": "^1.0.1",
    "grunt-browserify": "^5.2.0",
    "istanbul": "^0.4.5",
    "mocha": "^4.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "sinon": "^4.1.3",
    "sinon-chai": "^2.14.0"
  },
  "scripts": {
    "lint": "./node_modules/.bin/eslint src/**/*.js",
    "test": "./node_modules/.bin/mocha test/*  --require babel-register",
    "cover": "./node_modules/.bin/babel-node ./node_modules/.bin/babel-istanbul cover _mocha test/* -- --require babel-register ",
    "coveralls": "npm run cover -- --report lcovonly && cat ./coverage/lcov.info | coveralls"
  },
  "browserify": {
    "debug": true,
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "env"
          ]
        }
      ]
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": [
          "src/**/*.js"
        ]
      }
    ],
    "extends": [
      "eslint:recommended"
    ],
    "env": {
      "browser": true,
      "es6": true,
      "mocha": true
    }
  }
}
